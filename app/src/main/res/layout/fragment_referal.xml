<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/ecoseMainColor">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/people_optimized"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/referralTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="Referidos"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/ecoseMainWhite"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/referralAlguienteComento"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:textSize="23dp"
        android:text="¿Alguien te comento sobre la app?"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/ecoseMainWhite"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/referralTitle"/>
    <TextView
        android:id="@+id/referralEscribe"
        android:layout_width="match_parent"
        android:text="Escribe su código de referido para ayudarse \nmutuamente"
        android:fontFamily="@font/poppins_bold"
        android:textSize="15dp"
        android:textColor="@color/ecoseMainWhite"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/referralAlguienteComento"/>

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/referralCode"
    android:layout_width="match_parent"
    android:textAlignment="center"
    android:gravity="center_horizontal"
    android:fontFamily="@font/poppins_bold"
    android:padding="10dp"
    android:background="@drawable/btn_background"
    android:layout_marginHorizontal="20dp"
    app:boxCornerRadiusBottomEnd="5dp"
    android:layout_marginTop="50dp"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@id/referralEscribe"/>


    <Button
        android:background="@drawable/btn_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:textColor="@color/ecoseMainWhite"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/referralCode"/>

</androidx.constraintlayout.widget.ConstraintLayout>